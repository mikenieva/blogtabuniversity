{{!< default}}

    {{! This is a post template. It displays a single post that the user selected from the home page template. }}
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}

        {{#contentFor "meta"}}
            <meta property="og:title" content="{{title}} - {{#author}}{{name}}{{/author}}" />
            <meta property="og:site_name" content="{{@blog.title}}" />
            <meta property="og:type" content="article" />
            <meta property="og:description" content="{{meta_description}}"/>
            <meta property="og:image" content="{{@blog.url}}{{image}}">
            <meta property="article:author" content="{{facebook_url}}" />
            <meta property="article:published_time" content="{{date format="YYYY-MM-DD"}}" />
            {{#foreach tags}}<meta property="article:tag" content="{{name}}" />{{/foreach}}
            <meta property="fb:profile_id" content="mikenieva" />
            <meta property="fb:app_id" content="1157607614323376" />
        {{/contentFor}}
    
    {{#if image}}
    <div class="image-overlay"></div>
    <div class="post-image" style="background-image:url({{image}})"></div>
    {{else}}
    <div class="no-image"></div>
    {{/if}}

    <div class="wrapper">
        <article class="{{post_class}}">
            
            <section class="post-content" {{#if tags}}style="margin-top:-60px;"{{/if}}>

                {{#if tags}}<div class="post-tags">{{tags separator="  "}}</div>{{/if}} 
                
                <time class="post-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">{{date format="DD - MM - YYYY"}}</time>
                <br>
                <h1 class="post-title">{{{title}}}</h1>

                <div class="post-meta">
                    <span class="author">{{author}}</span>
                </div>
                <section class="share">
                <div class="fb-share-button" data-href="{{url absolute="true"}}" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse">Share</a></div>
                </section>
                <br>
                <section class="post-content-output">{{content}}</section>

                <section class="share">
                    <div class="fb-share-button" data-href="{{url absolute="true"}}" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse">Share</a></div>
                </section>

                <section class="author-meta clearfix">
                    {{#author}}
                        {{#if image}}
                        <a href="{{url}}">
                            <div class="author-image-wrapper">
                                <div class="author-image" style="background-image: url({{image}})"></div>
                            </div>
                        </a>
                        {{/if}}

                        {{#if image}}
                        <div class="author-bio">
                        {{else}}
                        <div class="author-bio" style="width: 90%;">
                        {{/if}}
                            <h3>{{name}}</h3>
                            {{#if bio}}
                                <p>{{bio}}</p>
                            {{/if}}
                            <p><a href="{{url}}">Conoce más de sus artículos.</a></p>
                        </div>
                    {{/author}}
                </section>
                
                <div class="fb-comments" data-href="{{url absolute="true"}}" data-numposts="100" data-width="100%"></div>


                <section class="read-next clearfix">
                    {{#prev_post}}
                    <a class="read-next-story prev" href="{{url}}">
                        <section class="post">
                            <h3>También puede interesarte:</h3>
                            <h2>{{title}}</h2>
                        </section>
                    </a>
                    {{/prev_post}}
                    {{#next_post}}
                    <a class="read-next-story" href="{{url}}">
                        <section class="post">
                            <h3>Conoce sobre:</h3>
                            <h2>{{title}}</h2>
                        </section>
                    </a>
                    {{/next_post}}
                </section>
                

            </section>
        </article>
        {{/post}}
 
    </div>