{{!< default}}

{{! This is the home page template. It loops though all your posts and displays them. }}
    
    {{#is "home"}}

    {{#contentFor "meta"}}
    <meta property="og:url" content="{{@blog.url}}" />
    <meta property="og:title" content="Blog TAB University - Comunidad de Alto Desempeño" />
    <meta property="og:site_name" content="{{@blog.title}}" />
    <meta property="og:image" content="http://i.imgur.com/2W24GAF.jpg" />
    <meta property="og:description" content="Experiencias y consejos que te permiten encontrar tu mejor versión profesional."/>
    <meta property="fb:profile_id" content="mikenieva" />
    <meta property="fb:admins" content="mikenieva" />
    <meta property="fb:pages" content="285521064948889" />
    {{/contentFor}}


    {{#get "posts" include="tags" filter="featured:true" as |featured|}}
    <div class="flexslider">
        <ul class="slides">
            {{#foreach featured}}
            <li>
                <a href="{{url}}">   
                    <div class="slider-image" style="background-image: url({{image}})">
                        <div class="wrapper">
                            <div class="info">
                                <h2>{{title}}</h2>
                            </div>
                        </div>
                    </div>
                </a>
            </li>
            {{/foreach}}
        </ul>
    </div>
    {{/get}}

    {{/is}}
        
    <div class="wrapper posts clearfix">   
        {{#foreach posts}}
        <div class="{{post_class}}">
            <a href="{{url}}">      
                <div class="featured-image" {{#if image}} style="background-image:url({{image}})" {{else}} style="height: 225px; background: #3dc9b3;" {{/if}}>
                    <div class="overlay">
                        <div class="vertical">
                            <div class="read-more"><i class="icon-search"></i></div>
                        </div>
                    </div>
                </div>  
                <section class="post-excerpt">
                    <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM D"}}</time>              
                    <h2 class="post-title">
                        {{{title}}}
                    </h2>
                </section> 
            </a>
        </div>
        {{/foreach}}
    </div>
    
    {{!! Pagination links }}
    {{pagination}}
