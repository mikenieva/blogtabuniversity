<!DOCTYPE html>
<html>
    <head>
        {{! Document Settings }}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        {{! Page Meta }}
        <title>{{meta_title}}</title>
        <meta name="description" content="{{meta_description}}" />
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="shortcut icon" href="{{asset "/favicon.ico"}}">

        {{! CSS  }}
        <link href='https://fonts.googleapis.com/css?family=Lato:300,700' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{asset "css/screen.css"}}">
        
        {{! Ghost outputs important style and meta data with this tag }}
        {{ghost_head}}
        {{{block "meta"}}}
        <script src="https://use.fontawesome.com/29f7d530b6.js"></script>
    </head>
    <body class="{{body_class}}">

        <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v2.9&appId=1157607614323376";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>


        <header class="site-header">
            {{> "header"}}                  
        </header>

        {{#if @blog.navigation}}
            <nav class="pushy pushy-left">
                {{navigation}}
            </nav>
        {{/if}}

        <div class="site-overlay"></div>

        <main class="animated fadeIn" id="main" role="main">
            {{{body}}}
        </main>

        <footer class="site-footer">
            {{> "footer"}}
        </footer>

        {{! Ghost outputs important scripts and data with this tag }}
        {{ghost_foot}}

        <script type="text/javascript"> 
            //Load jQuery if it doesn't exist
            if (typeof jQuery == 'undefined') {
                document.write('<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></'+'script>');
            }
        </script> 

        <script src="{{asset "js/theme-options.js"}}"></script>
        <script src="{{asset "js/main.min.js"}}"></script>


        <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script> 
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/locale/es.js "></script>  
        <script type="text/javascript">  
        $(document).ready(function () {
            moment.locale('es');

            $('.post-date').each(function (i, date) {
            var $date = $(date);

            $date.html(
            moment($date.attr('datetime'))
            .format('LL')
                        );
                    });
                });
        </script>  
    </body>
</html>
